@page
@model Impresora3d.App.Fontend.Pages.ListModel2
@{
}
<h5>PERSONAL 3D</h5>

<table class="table table-dark table-striped">
    <tr>
    <th>Identificacion</th>
    <th>Nombre</th>
    <th>Apellidos</th>
    <th>Numero Telefono</th>
    <th>Fecha Nacimiento</th>
    <th>Correo</th>
    <th>Direccion</th>
    <th>Nivel de Estudio</th>
    <th>Cargo</th>
    <th>Editar</th>
    <th>Eliminar</th>
    
    
        
  </tr>
    @foreach (var persona in Model.personas)
    {
        <tr>
            <td>@persona.Identificacion</td>
            <td>@persona.Nombre</td>
            <td>@persona.Apellidos</td>
            <td>@persona.NumeroTelefono</td>
            <td>@persona.FechaNacimiento</td>
            <td>@persona.Correo</td>
            <td>@persona.Direccion</td>
            <td>@persona.NivelEstudio</td> 
            <td>@persona.Discriminator</td>             
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-personaId="@persona.Id">
                <i class="fa-solid fa-pencil"></i> 
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Delete" asp-route-personaId="@persona.Id">
                <i class="fa-solid fa-trash-can"></i>
                </a>
            </td>
                      
                  
            
        </tr>
    }
</table>
<a class="button button" asp-page="./Create">Agregar Persona
<i class="fas fa-address-book fa-lg" aria-hidden="true"></i></a>
<style>
.button {
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  background-color: #008CBA;
}

</style>
